# Server port (Railway will set this automatically)
PORT=3003

# OBS WebSocket connection (only needed if OBS runs on a different machine)
# Leave empty if OBS is on the same machine as the server
OBS_WEBSOCKET_URL=ws://localhost:4455
OBS_WEBSOCKET_PASSWORD=

# OBS Media Source name for video playback
OBS_VIDEO_SOURCE=Video Player

# Firebase Admin SDK Configuration
# The server uses Firebase Admin SDK to read/write production config
# Option 1: Set path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
#
# Option 2: Set the database URL directly (used with default credentials on GCP/Firebase)
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
